<div class="container">
  <div class="row">
    <div class="col m10 offset-m1 s12">
      <h2 class="center-align">Editar Perfil</h2>

      <div class="row">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 's12') do |f| %>
          <%= devise_error_messages! %>

          <div class="row">
            <div class="input-field col m6 s12">
              <%= f.text_field :first_name %>
              <%= f.label :first_name, "Nome" %>
            </div>
            <div class="input-field col m6 s12">
              <%= f.text_field :last_name %>
              <%= f.label :last_name, "Sobrenome" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col m6 s12">
              <i class="material-icons prefix">account_circle</i>
              <%= f.text_field :username %>
              <%= f.label :username, "Nome de Usuário" %>
            </div>
            <div class="input-field col m6 s12">
              <i class="material-icons prefix">email</i>
              <%= f.email_field :email %>
              <%= f.label :email, "E-mail" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col m6 s12">
              <%= f.password_field :password, autocomplete: "off" %>
              <%= f.label :password do %>
                Senha (não preencher para manter a senha atual)
              <% end %>
            </div>
            <div class="input-field col m6 s12">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
              <%= f.label :password_confirmation, "Confirmação de Senha" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6 offset-s3">
              <%= f.password_field :current_password, autocomplete: "off" %>
              <%= f.label :current_password do %>
                Senha atual (necessária para atualização de perfil)
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col s12">
              <p class="center-align">
                <%= f.submit "Confirmar cadastro", class: "btn btn-large waves-effect waves-light" %>
              </p>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col s12">
            <div class="divider"></div>
            <br>
            <p>Cansado do EasyCook? :(</p>
            <p class="center-align">
              <%= button_to "Excluir conta", registration_path(resource_name), data: { confirm: "Deseja mesmo excluir sua conta?" }, method: :delete, class: "btn waves-effect waves-light red" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
