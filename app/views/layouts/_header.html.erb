<div class='navbar-fixed'>
  <nav>
    <div class='nav-wrapper'>
      <ul class='left hide-on-med-and-down'>
        <li>
          <%= link_to root_path, method: :get do %>
            <img class="responsive-img" id="header-logo" src="/logo.png">
          <% end %>
        </li>
        <li>
          <%= link_to 'Receitas', recipes_path, method: :get %>
        </li>
        <li>
          <%= link_to 'Sobre', about_path, method: :get %>
        </li>
      </ul>
      <ul class='right hide-on-med-and-down'>
        <% if user_signed_in? %>
          <li><%= link_to 'Perfil', edit_user_registration_path %></li>
          <li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><a href="#sign-in-modal">Entrar</a></li>
          <li><a href="#sign-up-modal">Cadastre-se</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>

<div id="sign-in-modal" class="modal">
  <%= form_for(:user, url: session_path(:user)) do |f| %>
    <div class="modal-content">
      <%= f.email_field :email, class: 'input-field', autofocus: true, placeholder: 'Email' %>
      <%= f.password_field :password, class: 'input-field', placeholder: 'Password', autocomplete: 'off' %>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Entrar', class: 'modal-action modal-close waves-effect waves-green btn-flat' %>
    </div>
  <% end %>
</div>

<div id="sign-up-modal" class="modal">
  <%= form_for(:user, url: registration_path(:user)) do |f| %>
    <div class="modal-content">
      <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
      <%= f.text_field :last_name, placeholder: 'Last Name' %>
      <%= f.text_field :username, placeholder: 'Username' %>
      <%= f.email_field :email, class: 'input-field', placeholder: 'Email' %>
      <%= f.password_field :password, class: 'input-field', placeholder: 'Password', autocomplete: 'off' %>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Cadastrar', class: 'modal-action modal-close waves-effect waves-green btn-flat' %>
    </div>
  <% end %>
</div>
