<h1>New Recipe</h1>

<div style="display: block; padding: 10px" id="recipe_div">
  <%= @recipes_builder.recipe.recipe_type %>: Oi eu sou o goku!
</div>

<%= form_for(@recipes_builder.recipe) do |f| %>
  <% if @recipes_builder.recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipes_builder.recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipes_builder.recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :instructions %><br>
    <%= f.text_field :instructions %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br>
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', recipes_path %>
